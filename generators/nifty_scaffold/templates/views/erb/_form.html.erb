<%% form_for @<%= singular_name %><%- if options[:jquery] -%>, :html => { :class => remote_class ||= '' } <%- end -%>do |f| %>
  <%%= f.error_messages %>
<%- for attribute in attributes -%>
  <p>
    <%%= f.label :<%= attribute.name %> %><br />
    <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
  </p>
<%- end -%>
  <p><%%= f.submit t('formtastic.submit', :default => 'Submit') %></p>
<%% end %>
