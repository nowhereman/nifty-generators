<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%= I18n.default_locale %>" lang="<%= I18n.default_locale %>">
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <title><%%= h(yield(:title) || "Untitled") %></title>
    <%%= stylesheet_link_tag '<%= file_name %>' %>
    <%- if options[:formtastic] -%>
    <%%= stylesheet_link_tag 'formtastic', 'formtastic_changes' %>
    <%- end -%>
    <%- if options[:jammit] -%>
    <%%= raw include_stylesheets(:common, :media => 'all') %>
    <%%= raw include_javascripts :workspace %>

    <%%= raw yield(:js_views) %>
    <%- end -%>
    <%- if options[:jquery] -%>
      <%- unless options[:jammit] -%>
    <%%= javascript_include_tag 'jquery', 'jquery.livequery', 'application' %>
      <%- end -%>
    <%%= raw yield_authenticity_token %>
    <%- end -%>
    <%%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%- if options[:authlogic] -%>
      <div id="user_nav">
        <%% if current_user %>
          <%%= link_to t('common.actions.account', :default => 'Edit Profile'), edit_user_path(:current) %> |
          <%%= link_to t('common.actions.logout', :default => 'Logout').capitalize, logout_path %>
        <%% else %>
          <%%= link_to t('common.actions.register', :default => 'Register'), signup_path %> |
          <%%= link_to t('common.actions.login', :default => 'Login').capitalize, login_path %>
        <%% end %>
      </div>

      <%- end -%>
      <%%- flash.each do |name, msg| -%>
        <%%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash" %>
      <%%- end -%>
      
      <%%- if show_title? -%>
        <h1><%%=h yield(:title) %></h1>
      <%%- end -%>
      
      <%%= yield %>
    </div>
  </body>
</html>
